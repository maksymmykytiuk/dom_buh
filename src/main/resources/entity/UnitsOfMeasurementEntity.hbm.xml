<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.UnitsOfMeasurementEntity" table="units_of_measurement" schema="dom_buh">
        <id name="idUnit">
            <column name="id_unit" sql-type="int(11)"/>
        </id>
        <property name="count">
            <column name="count" sql-type="int(11)"/>
        </property>
        <property name="shortName">
            <column name="short_name" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>